    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   <script>
    const userOrders = <%- JSON.stringify(userOrders) %>;
let filteredOrders = [...userOrders];

function formatDate(dateString) {
    const options = { year: 'numeric', month: 'short', day: 'numeric' };
    return new Date(dateString).toLocaleDateString('en-US', options);
}

function getStatusBadge(status) {
    const statusMap = {
        'Pending': { class: 'status-pending', text: 'Pending' },
        'Shipped': { class: 'status-shipped', text: 'Shipped' },
        'Delivered': { class: 'status-delivered', text: 'Delivered' },
        'Cancelled': { class: 'status-cancelled', text: 'Cancelled' },
        'Returned': { class: 'status-returned', text: 'Returned' },
    };
    const statusInfo = statusMap[status] || { class: 'status-unknown', text: 'Unknown' };
    return `<span class="status-badge ${statusInfo.class}">${statusInfo.text}</span>`;
}

function getActionButtons(status, orderId) {
    const viewBtn = `<button class="btn-view" onclick="viewOrder('${orderId}')">View</button>`;
    if (status === "Pending" || status === "Shipped") {
        return `<div class="action-buttons">${viewBtn}<button class="btn-cancel" onclick="cancelOrder('${orderId}')">Cancel</button></div>`;
    } else if (status === "Delivered") {
        return `<div class="action-buttons">${viewBtn}<button class="btn-return" onclick="returnOrder('${orderId}')">Return</button></div>`;
    } else {
        return `<div class="action-buttons">${viewBtn}<button class="btn-disabled" disabled>No Action</button></div>`;
    }
}

function renderOrders(orders) {
    const tbody = document.getElementById('ordersTableBody');
    const noOrders = document.getElementById('noOrdersMessage');

    if (!orders.length) {
        tbody.innerHTML = '';
        noOrders.style.display = 'block';
        return;
    }

    noOrders.style.display = 'none';
    tbody.innerHTML = orders.map(order => {
        const firstItem = order.items[0];
        const product = firstItem.productId;
        const image = product?.productImage?.[0] || "/images/no-image.png";
        const name = product?.productName || "Unknown Product";

        return `
            <tr>
                <td><img src="${image}" class="product-image" alt="${name}"></td>
                <td style="max-width:200px;" class="col-2 text-truncate">${name}</td>
                <td>${formatDate(order.createdAt)}</td>
                <td>â‚¹${order.grandTotalprice.toFixed(2)}</td>
                <td>${getStatusBadge(order.orderStatus)}</td>
                <td>${getActionButtons(order.orderStatus, order._id)}</td>
            </tr>
        `;
    }).join('');
}

// Cancel order
function cancelOrder(orderId) {
    if (confirm(`Cancel order ${orderId}?`)) {
        fetch(`/orders/cancel/${orderId}`, { method: "PUT" })
            .then(res => res.json())
            .then(data => location.reload())
            .catch(err => console.error(err));
    }
}

// Return order
function returnOrder(orderId) {
    if (confirm(`Return order ${orderId}?`)) {
        fetch(`/orders/return/${orderId}`, { method: "PUT" })
            .then(res => res.json())
            .then(data => location.reload())
            .catch(err => console.error(err));
    }
}

function viewOrder(orderId) {
    window.location.href = `/orders/${orderId}`;
}

/* ðŸ”¹ SEARCH function */
function handleSearch() {
    const query = document.getElementById("searchInput").value.toLowerCase();
    filteredOrders = userOrders.filter(order => {
        const productName = order.items[0]?.productId?.productName?.toLowerCase() || "";
        return productName.includes(query);
    });
    renderOrders(filteredOrders);
}

/* ðŸ”¹ SORT function */
function handleSort() {
    const sortValue = document.getElementById("sortSelect").value;

    filteredOrders.sort((a, b) => {
        if (sortValue === "date-desc") {
            return new Date(b.createdAt) - new Date(a.createdAt);
        } else if (sortValue === "date-asc") {
            return new Date(a.createdAt) - new Date(b.createdAt);
        } else if (sortValue === "price-desc") {
            return b.grandTotalprice - a.grandTotalprice;
        } else if (sortValue === "price-asc") {
            return a.grandTotalprice - b.grandTotalprice;
        }
    });

    renderOrders(filteredOrders);
}

// Event Listeners
document.getElementById("searchInput").addEventListener("input", handleSearch);
document.getElementById("sortSelect").addEventListener("change", handleSort);

// Initial render
renderOrders(filteredOrders);

// ----------------------------------- view-modal-----------------------------

function viewOrder(orderId) {
    const order = userOrders.find(o => o._id === orderId);
    if (!order) return;

    // ... existing code filling modal ...
    // Order info
    document.getElementById("modalOrderNumber").textContent = order.orderNumber;
    document.getElementById("modalPurchaseDate").textContent = formatDate(order.createdAt);
    document.getElementById("modalOrderStatus").innerHTML = getStatusBadge(order.orderStatus);

    // Items list
    const itemsContainer = document.getElementById("modalItemsList");
    itemsContainer.innerHTML = order.items.map(item => {
        const product = item.productId || {};
        const image = product.productImage?.[0] || "/images/no-image.png";

        return `
          <div class="d-flex mb-3 border rounded p-2">
            <div class="me-3">
              <img src="${image}" alt="${product.productName}" class="img-thumbnail" style="width:100px;height:100px;object-fit:cover;">
            </div>
            <div>
              <h6>${product.productName || "Unknown Product"}</h6>
              <p class="mb-1"><strong>Variant:</strong> ${item.variantName} | <strong>Scale:</strong> ${item.scale}</p>
              <p class="mb-1"><strong>Qty:</strong> ${item.quantity}</p>
              <p class="mb-1"><strong>Price:</strong> â‚¹${item.salePrice.toFixed(2)}</p>
              <p class="mb-1"><strong>Total:</strong> â‚¹${item.totalProductprice.toFixed(2)}</p>
              <p><strong>Status:</strong> ${getStatusBadge(item.itemStatus)}</p>
            </div>
          </div>
        `;
    }).join("");

    // Billing Details
    const b = order.billingDetails;
    document.getElementById("modalBilling").textContent =
      `${b.name}, ${b.address}, ${b.city}, ${b.state}, ${b.country}, Landmark: ${b.landMark}, Pincode: ${b.pincode}, Phone: ${b.phone}, Email: ${b.email}`;

    // Payment
    document.getElementById("modalPaymentMethod").textContent = order.paymentMethod;
    document.getElementById("modalPaymentStatus").textContent = order.paymentStatus;
    document.getElementById("modalShippingCharge").textContent = order.shippingCharge.toFixed(2);
    document.getElementById("modalGrandTotal").textContent = order.grandTotalprice.toFixed(2);


    // Bind invoice button
    document.getElementById("downloadInvoiceBtn").onclick = function() {
        window.open(`/orders/${orderId}/invoice`, "_blank");
    };

    const modal = new bootstrap.Modal(document.getElementById("orderDetailsModal"));
    modal.show();
}

</script>

