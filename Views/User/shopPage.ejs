                		<div class="col-lg-9 product-list">
                <div class="search-box">
                  <input
                    type="text"
                    id="product-search"
                    placeholder="Search products...."
                    value="<%= searchQuery || '' %>"
                  />
                  <button class="search-btn">
                    <i class="fas fa-search"></i>
                  </button>
                </div>
                			<div class="toolbox">
