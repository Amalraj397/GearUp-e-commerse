            body {
      margin: 0;
      font-family: 'Arial', sans-serif;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      overflow: hidden;
      position: relative;
    }

        /* Background video */
        video.background-video {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          object-fit: cover;
          z-index: -1; /* stays behind content */
        }

        .container {
            background: white;
            border-radius: 20px;
            padding: 60px 40px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            position: relative;
            animation: slideIn 1s ease-out;
        }

        .hamburger {
            position: absolute;
            top: 30px;
            left: 30px;
            width: 30px;
            height: 20px;
            cursor: pointer;
            z-index: 10;
        }

        .hamburger span {
            display: block;
            width: 100%;
            height: 3px;
            background: #333;
            margin: 4px 0;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .hamburger:hover span {
            background: #e76f51;
        }

        .car-container {
            margin-bottom: 40px;
            position: relative;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .car {
            cursor: pointer;
            transition: transform 0.3s ease;
            animation: carShake 2s infinite ease-in-out;
        }

        .car:hover {
            transform: scale(1.1);
        }

        .car svg {
            width: 200px;
            height: 100px;
        }

        .smoke {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0.7;
            animation: smokeRise 3s infinite ease-out;
        }

        .smoke-particle {
            width: 20px;
            height: 20px;
            background: #666;
            border-radius: 50%;
            position: absolute;
            animation: smokeFloat 2s infinite ease-out;
        }

        .smoke-particle:nth-child(1) {
            animation-delay: 0s;
            left: -10px;
        }

        .smoke-particle:nth-child(2) {
            animation-delay: 0.5s;
            left: 0px;
        }

        .smoke-particle:nth-child(3) {
            animation-delay: 1s;
            left: 10px;
        }

        .error-code {
            font-size: 120px;
            font-weight: bold;
            color: #f4a261;
            margin: 20px 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            animation: bounceIn 1.5s ease-out;
        }

        .tire-zero {
            width: 120px;
            height: 120px;
            background: #333;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            animation: tireRotate 4s linear infinite;
        }

        .tire-zero::before {
            content: '';
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 50%;
        }

        .tire-zero::after {
            content: '';
            position: absolute;
            width: 100px;
            height: 100px;
            border: 3px solid #555;
            border-radius: 50%;
            border-style: dashed;
        }

        .main-text {
            font-size: 28px;
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
            animation: fadeInUp 2s ease-out;
        }

        .sub-text {
            font-size: 16px;
            color: #888;
            margin-bottom: 40px;
            animation: fadeInUp 2.5s ease-out;
        }

        .home-button {
            background: linear-gradient(135deg, #f4a261, #e76f51);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(244, 162, 97, 0.3);
            animation: fadeInUp 3s ease-out;
        }

        .home-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(244, 162, 97, 0.4);
        }

        .home-button:active {
            transform: translateY(-1px);
        }

        /* Animations */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes carShake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-2px); }
            75% { transform: translateX(2px); }
        }

        @keyframes smokeRise {
            0% {
                opacity: 0.7;
                transform: translateX(-50%) translateY(0) scale(0.5);
            }
            100% {
                opacity: 0;
                transform: translateX(-50%) translateY(-50px) scale(1.5);
            }
        }

        @keyframes smokeFloat {
            0% {
                opacity: 0.8;
                transform: translateY(0) scale(0.5);
            }
            100% {
                opacity: 0;
                transform: translateY(-30px) scale(1.2);
            }
        }

        @keyframes tireRotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @keyframes bounceIn {
            0% {
                opacity: 0;
                transform: scale(0.3);
            }
            50% {
                opacity: 1;
                transform: scale(1.1);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 40px 20px;
            }
            
            .error-code {
                font-size: 80px;
            }
            
            .tire-zero {
                width: 80px;
                height: 80px;
            }
            
            .tire-zero::before {
                width: 40px;
                height: 40px;
            }
            
            .tire-zero::after {
                width: 70px;
                height: 70px;
            }
            
            .main-text {
                font-size: 24px;
            }
            
            .car svg {
                width: 150px;
                height: 75px;
            }
        }
