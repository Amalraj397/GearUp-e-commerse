    <script>               

        document.querySelectorAll('.toggle-desc-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            const productContent = btn.closest('.product-content');
            const shortDesc = productContent.querySelector('.short-desc');
            const fullDesc = productContent.querySelector('.full-desc');
        
            const isExpanded = fullDesc.style.display === 'block';
        
            shortDesc.style.display = isExpanded ? 'block' : 'none';
            fullDesc.style.display = isExpanded ? 'none' : 'block';
            btn.textContent = isExpanded ? 'See More' : 'See Less';
          });
        });
    </script>
   
<script>
  let selectedVariant = <%- JSON.stringify(product.variants[0]) %>;

  const priceContainer = document.querySelector(".product-price");
  const stockBadge = document.getElementById("stock-badge");
  const userMaxQuantity = 5;

  // Function to update price and stock dynamically
  const updatePriceAndStock = () => {
    priceContainer.innerHTML = "";

    if (selectedVariant.offerPrice && selectedVariant.offerPrice > 0) {
      priceContainer.innerHTML = `
        <span class="text-muted" style="text-decoration: line-through; font-size: 18px; margin-right: 12px;">
          ‚Çπ${selectedVariant.salePrice}
        </span>
        <span class="fw-bold fs-4 ms-2" style="color:#0af011;">
          ‚Çπ${selectedVariant.offerPrice}
        </span>
      `;
    } else {
      priceContainer.innerHTML = `
        <span class="fs-4 fw-bold text-dark">‚Çπ${selectedVariant.salePrice}</span>
      `;
    }
    if (selectedVariant.stock === 0) {
      stockBadge.textContent = "Out of Stock";
      stockBadge.style.color = "red";
    } else if (selectedVariant.stock < userMaxQuantity) {
      stockBadge.textContent = `Only (${selectedVariant.stock} left)`;
      stockBadge.style.color = "orange";
    } else {
      stockBadge.textContent = "In Stock";
      stockBadge.style.color = "green";
    }
  };

  document.querySelectorAll(".scale-btn").forEach(button => {
    button.addEventListener("click", () => {
      document.querySelectorAll(".scale-btn").forEach(btn => btn.classList.remove("active"));
      button.classList.add("active");

      // Get the new variant data
      selectedVariant = JSON.parse(button.getAttribute("data-variant"));

      // Update UI
      updatePriceAndStock();
    });
  });

  updatePriceAndStock();
  
// -------------- addtoCart with increment----------
function addToCart(productId) {
  const quantity = document.getElementById("qty").value;

  const productCartdata = {
    productId,
    variantName: selectedVariant.variantName,
    scale: selectedVariant.scale,
    quantity: parseInt(quantity)
  };

  fetch("/addToCart", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify(productCartdata)
  })
  .then(async res => {
    let data;
    try {
      data = await res.json();
    } catch (err) {
      throw new Error("Invalid JSON response from server.");
    }

    // Already in cart
    if (data.alreadyInCart) {
      Swal.fire({
        title: "Already in Cart",
        text: "This product is already in your cart. Do you want to increase the quantity?",
        icon: "question",
        showCancelButton: true,
        confirmButtonText: "Yes, increase it!",
        cancelButtonText: "No, cancel"
      }).then(result => {
        if (result.isConfirmed) {

          //increase quantity api
          fetch("/increaseCartQuantity", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(productCartdata)
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              Toastify({
                text: "Quantity increased in cart üõí",
                duration: 1000,
                gravity: "top",
                position: "right",
                backgroundColor: "green",
              }).showToast();
            } else {
              Swal.fire("Oops", data.message || "Failed to increase quantity", "error");
            }
          });
        }
      });
    }

    //  success 
    else if (res.ok && data.success) {
      Toastify({
        text: data.message || "Product added to cart successfully! üõí",
        gravity: "top",
        position: "right",
        duration: 1200,
        backgroundColor: "green"
      }).showToast();
      window.location.reload()
      document.getElementById("cart-icon-badge").style.display = "block";
    }

    // Error
    else {
      Swal.fire("Oops!", data.message || "Unable to add to cart", "error");
    }
  })
  .catch(err => {
    console.error("Caught error in addToCart:", err);
  });
}

 
function addToWishlist(productId) {
    fetch("/addToWishlist", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({ productId })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            Toastify({
                text: "Product Added to wishlist ‚ù§",
                gravity: "top",
                position: "right",
                duration: 1000,
                backgroundColor: "green"
            }).showToast();
        } else {
            Swal.fire("Oops!", data.message || "Unable to add to wishlist", "error");
        }
    })
    .catch(() => {
        Swal.fire("Error", "Something went wrong!", "error");
    });
}
