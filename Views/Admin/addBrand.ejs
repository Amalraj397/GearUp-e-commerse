    color: #ffffff;
  }

  .file-input-wrapper {
    display: flex;
    gap: 10px;
  }

  .file-input-wrapper input[type="text"] {
    flex-grow: 1;
  }

  .file-input-label {
    display: flex;
    align-items: center;
    background-color: #4a5568;
