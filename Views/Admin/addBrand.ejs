    padding: 10px;
    border-radius: 4px;
    cursor: pointer;
  }

  .file-input-label .material-icons {
    margin-right: 5px;
  }

  .submit-button {
    background-color: #000000;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    align-self: flex-start;
  }

  .submit-button:hover {
    background-color: #0343b1;
  }
