/* Image Upload Styles */
.image-upload-container {
    margin-top: 15px;
}

.image-upload-area {
    border: 2px dashed var(--border-color);
    border-radius: 10px;
    padding: 30px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
