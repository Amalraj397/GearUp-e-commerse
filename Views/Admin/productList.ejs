    border: 1px solid;
    border-radius: 0.30rem;
    font-weight: 500;
}

.status-draft {
    background-color: rgba(237, 137, 54, 0.2);
    color: var(--warning-color);
}

.product-actions {
    display: flex;
    gap: 8px;
}

.edit-btn,
.block-btn,
.unblock-btn {
    padding: 6px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: all 0.3s ease;
}

.edit-btn {
    background-color: rgba(66, 153, 225, 0.2);
    color: var(--info-color);
    width: 85px;
    border: 2px solid 
}

.edit-btn:hover {
    background-color: var(--info-color);
