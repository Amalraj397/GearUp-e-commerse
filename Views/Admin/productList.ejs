    top: 0;
    z-index: 10;
}

.products-table tbody tr:hover {
    background-color: rgba(255, 140, 0, 0.05);
}

.products-table tbody tr:last-child td {
    border-bottom: none;
}

.product-image {
    width: 50px;
    height: 50px;
    border-radius: 5px;
    object-fit: cover;
}

.product-status {
    display: inline-block;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
}

.status-active {
