<script>
  const variantContainer = document.getElementById("variant-container");
  const addVariantBtn = document.getElementById("addVariantBtn");

  addVariantBtn.addEventListener("click", () => {
    const originalBlock = variantContainer.querySelector(".variant-block");
    const newBlock = originalBlock.cloneNode(true);

    // Clear inputs in the cloned block
    newBlock.querySelectorAll("input, select").forEach(input => {
      if (input.tagName === "SELECT") {
        input.selectedIndex = 0;
      } else {
        input.value = "";
      }
    });

    // Add remove button if not already present
    if (!newBlock.querySelector(".remove-variant-btn")) {
      const removeBtn = document.createElement("button");
      removeBtn.type = "button";
      removeBtn.innerHTML = "REMOVE";
      removeBtn.className = "remove-variant-btn";
      removeBtn.style.marginTop = "-10px";
      removeBtn.style.marginBottom = "10px";
      removeBtn.style.marginLeft = "auto";
      removeBtn.style.background = "none";
      removeBtn.style.border = "none";
      removeBtn.style.color = "red";
      removeBtn.style.fontSize = "15px";
      removeBtn.style.cursor = "pointer";

      //  click event to remove  variant block
      removeBtn.addEventListener("click", () => {
        newBlock.remove();
      });

      // Append remove button to top of variant block
      newBlock.insertBefore(removeBtn, newBlock.firstChild);
    }
    // Append the new variant block to the container
    variantContainer.appendChild(newBlock);
  });
</script>


