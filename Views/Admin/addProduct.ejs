  .products-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 1200px;
  }

  .products-table th,
  .products-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .products-table th {
    background-color: rgba(255, 140, 0, 0.1);
    color: var(--primary-color);
    font-weight: 600;
